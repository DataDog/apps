{
    "name": "@datadog/create-app",
    "version": "1.0.0",
    "description": "npm init package to create a Datadog App",
    "scripts": {
        "build": "ncc build src/index.ts --minify --out bin",
        "format": "prettier --write .",
        "lint": "yarn run lint:check && prettier --check .",
        "lint:check": "npx eslint '**/*.{ts,js}'",
        "lint:fix": "yarn run lint:check --fix",
        "prepack": "yarn build",
        "test": "echo TODO: Add test script",
        "watch": "ncc build --out bin --watch"
    },
    "license": "Apache-2.0",
    "devDependencies": {
        "@types/tar": "6.1.1",
        "@vercel/ncc": "0.33.0",
        "clipanion": "3.1.0",
        "got": "11.8.3",
        "pkg-install": "1.0.0",
        "tar": "6.1.11",
        "typescript": "4.5.2"
    },
    "bin": "bin/index.js",
    "files": [
        "bin"
    ],
    "publishConfig": {
        "access": "public"
    }
}
